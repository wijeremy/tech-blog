{{>navbar}}
<div class='jumbotron p-5'>
  <h1 class='display-4'>{{post.title}}</h1>
  <p>{{post.content}}</p>
  <small class="text-muted">{{post.name}} ~ {{format_date post.createdAt}}</small>
</div>
<ul class="list-group">
  <li class="list-group-item">Comments</li>
</ul>
{{#each comments as |comment|}}
  <div class='card'>
    <div class='card-body row' id={{comment.id}}>
        <p>{{comment.content}}</p>
        <small class="text-muted">{{comment.name}} ~ {{format_date comment.createdAt}}</small>
      {{#if comment.owned}}
        <div class='btn-group col-12 col-sm-3' role='group'>
          <button
            type='button'
            class='btn btn-primary'
            id='edit-{{comment.id}}'
          >edit</button>
          <button
            type='button'
            class='btn btn-danger'
            id='delete-{{comment.id}}'
          >delete</button>
        </div>
      {{/if}}
    </div>
  </div>
{{/each}}